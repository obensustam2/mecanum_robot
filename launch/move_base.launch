<launch>
  <!-- Arguments -->
  <arg name="odom_frame_id" default="odom"/>
  <arg name="base_frame_id" default="robot_footprint"/>
  <arg name="global_frame_id" default="map"/>
  <arg name="cmd_vel_topic" default="/cmd_vel" />
  <arg name="odom_topic" default="odom" />
  <arg name="laser_topic" default="scan" />

  <!-- move_base -->
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <param name="base_local_planner" value="dwa_local_planner/DWAPlannerROS" />
    <rosparam file="$(find mecanum_robot)/config/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find mecanum_robot)/config/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find mecanum_robot)/config/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find mecanum_robot)/config/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find mecanum_robot)/config/move_base_params.yaml" command="load" />
    <rosparam file="$(find mecanum_robot)/config/dwa_local_planner_params.yaml" command="load" />
    <rosparam file="$(find mecanum_robot)/config/global_planner_params.yaml" command="load" />
  </node>
</launch>